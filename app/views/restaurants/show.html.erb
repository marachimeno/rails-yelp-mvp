<h2><%= @restaurant.name %></h2>
<p><strong>Adress:</strong> <%= @restaurant.address %></p>
<p><strong>Catregory:</strong> <%= @restaurant.category %></p>
<p><strong>Phone Number:</strong> <%= @restaurant.phone_number %></p>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><strong>Rating:</strong> <%= review.rating %> | <%= review.content %></li>
  <% end %>
</ul>

<div class="review-form my-5">
  <h3 class="pb-3">Leave a review</h3>
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
   <!--  <%#= f.label :rating %>
    <%#= f.text_field :rating %> -->
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Submit review", class: "btn btn-primary mt-2" %>
  <% end %>
</div>

<div class="mx-auto my-4 text-center p-3" style="width: 800px;">
  <%= link_to 'Back to all restaurants', restaurants_path, class: "btn btn-secondary px-2"%>
</div>

